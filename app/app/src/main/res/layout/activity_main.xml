<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoText="false"
                android:background="#45b5c5"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                android:paddingTop="25dp"
                android:text="Medidas-resumo"
                android:textColor="#FFF"
                android:textSize="18sp"
                tools:textAllCaps="false" />

            <Button
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#524d47"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="onClick"
                android:paddingTop="25dp"
                android:text="EstatÃ­stica Descritiva"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#e7595d"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="45dp"
                android:text="Probabilidade"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#a084d1"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="General Knowledge"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#80e7a9"
                android:paddingTop="25dp"
                android:text="Science"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b6"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#d9dbd0"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="40dp"
                android:text="English"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#cc8d66"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Authors"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b8"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#63c28c"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="35dp"
                android:text="Mathematics"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b9"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#f71735"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Capitals"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:visibility="invisible" />


            <Button
                android:id="@+id/b10"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#88a6db"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Currency"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>